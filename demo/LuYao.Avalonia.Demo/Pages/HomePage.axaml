<UserControl
    x:Class="LuYao.Avalonia.Demo.Pages.HomePage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:luyao="https://www.coderbusy.com/luyao"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Welcome to LuYao Avalonia Controls" />
            
            <TextBlock
                HorizontalAlignment="Center"
                Text="A collection of useful controls for Avalonia UI" />
            
            <TextBlock
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Text="Please select a control from the left menu to see demos and examples." />
        </StackPanel>
    </ScrollViewer>
</UserControl>
