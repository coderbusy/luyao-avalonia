<UserControl
    x:Class="LuYao.Avalonia.Demo.Views.VirtualizingWrapPanelView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:luo="using:LuYao.Avalonia.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:LuYao.Avalonia.Demo.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="vm:VirtualizingWrapPanelViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:VirtualizingWrapPanelViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*">
        <StackPanel Grid.Row="0" Margin="10" Spacing="5">
            <TextBlock FontSize="16"
                       FontWeight="Bold"
                       Text="VirtualizingWrapPanel Demo" />
            <TextBlock FontSize="12"
                       Foreground="Gray"
                       Text="{Binding ItemCount, StringFormat='Total Items: {0:N0} (only visible items are rendered)'}" />
            <CheckBox Content="Use Variable Item Sizes"
                      IsChecked="{Binding UseVariableSizes}"
                      Margin="0,5,0,0" />
            <TextBlock FontSize="11"
                       Foreground="Gray"
                       Text="(Even items: 100x80, Odd items: 150x120)"
                       IsVisible="{Binding UseVariableSizes}"
                       Margin="20,0,0,0" />
        </StackPanel>
        
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <luo:VirtualizingWrapPanel ItemSize="150, 100" 
                                                  ItemSizeProvider="{Binding ItemSizeProvider}"
                                                  Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SystemAccentColor}"
                                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Text}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="White" />
                                <TextBlock Text="{Binding Index, StringFormat='#{0}'}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Foreground="White" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
